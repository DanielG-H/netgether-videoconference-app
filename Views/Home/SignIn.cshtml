@model User 
@{
    ViewData["Title"] = "SignIn";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <h3 class="mt-1 mb-5 pb-1"><b>Sign In</b></h3>

                                <div class="text-center">
                                    <img src="https://pixy.org/download/5760794/" style="width: 185px; " alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are <b>NetGether</b></h4>
                                </div>

                                <form method="post">
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Username">Username</label>
                                        <input asp-for="Username" id="form2Example11" class="form-control" placeholder="Enter username" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" id="form2Example22" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">
                                            Log
                                            in
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Don't have an account?</p>
                                        <a class="btn btn-outline-danger" role="button" asp-controller="Home" asp-action="SignUp">Create new</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center" style="background-color: #1F7A8C;">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Facilitating communication</h4>
                                <p class="small mb-0">
                                    Video conferencing applications that support file sharing over LAN can help 
                                    users collaborate more effectively on projects within a closed LAN and make 
                                    a safe and faster network within an enterprise’s machines.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>